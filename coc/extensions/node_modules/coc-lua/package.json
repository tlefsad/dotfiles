{
  "name": "coc-lua",
  "version": "0.1.1",
  "description": "lua extension for coc",
  "author": "josa@gesell.me",
  "license": "MIT",
  "main": "lib/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/josa42/coc-lua.git"
  },
  "engines": {
    "coc": "^0.0.65"
  },
  "keywords": [
    "coc.nvim",
    "languageserver",
    "lua"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc -p tsconfig.json",
    "build:watch": "tsc --watch -p tsconfig.json",
    "prepare": "yarn clean && yarn build",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "lint": "eslint . --ext .ts,.js"
  },
  "activationEvents": [
    "onLanguage:lua",
    "onCommand:lua.version",
    "onCommand:lua.update.lua-lsp"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "lua",
      "properties": {
        "lua.enable": {
          "type": "boolean",
          "default": true
        },
        "lua.commandPath": {
          "type": "string"
        }
      }
    },
    "commands": [
      {
        "command": "lua.version",
        "title": "Print extension version"
      },
      {
        "command": "lua.update.lua-lsp",
        "title": "Update lua-lsp"
      }
    ]
  },
  "devDependencies": {
    "@chemzqm/tsconfig": "^0.0.3",
    "@chemzqm/tslint-config": "^1.0.17",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "coc.nvim": "0.0.77",
    "eslint-config-josa-typescript": "^0.1.2",
    "rimraf": "^3.0.2",
    "typescript": "~3.9.5"
  },
  "dependencies": {
    "eslint": "^7.2.0",
    "tslib": "^2.0.0",
    "which": "^2.0.2"
  }
}
